<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffffff"
    android:id="@+id/rlcontainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffd01615"
        android:id="@+id/relativeLayout"
        android:clickable="true"
        android:onClick="backIntent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Filme"
            android:id="@+id/nomeFilme"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/star5"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_toRightOf="@+id/star4"
                android:layout_toEndOf="@+id/star4" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/star4"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_toRightOf="@+id/star3"
                android:layout_toEndOf="@+id/star3" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/star3"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_toRightOf="@+id/star2"
                android:layout_toEndOf="@+id/star2" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/star2"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_toRightOf="@+id/star1"
                android:layout_toEndOf="@+id/star1" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/star1"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageFilme"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:text=" Sinopse "
        android:id="@+id/sinopse"
        android:background="@drawable/botao"
        android:textColor="#ffffffff"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/avaliar"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Avaliar"
        android:id="@+id/avaliar"
        android:layout_alignBottom="@+id/sinopse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/botao"
        android:textColor="#ffffffff" />

</RelativeLayout>
